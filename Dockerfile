FROM debian
RUN apt-get update && apt-get -y upgrade && apt-get install -y python3 && apt-get install -y python-pip && apt-get install -y ffmpeg && pip install youtube-dl && mp3_dl="youtube-dl -o '/Downloads/%(title)s.%(ext)s' -x --audio-format mp3 --embed-thumbnail";mp3_dl='"'$mp3_dl'"';echo "alias mp3="$mp3_dl >> /root/.bashrc && video_dl="youtube-dl -o '/Downloads/%(title)s.%(ext)s' -f bestvideo+bestaudio --merge-output-format mp4 --embed-subs --all-subs";video_dl='"'$video_dl'"';echo "alias video="$video_dl >> /root/.bashrc && video_m4a="youtube-dl -o '/Downloads/%(title)s.%(ext)s' -f bestvideo+m4a --merge-output-format mp4 --embed-subs --all-subs";video_m4a='"'$video_m4a'"';echo "alias video_c="$video_m4a >> /root/.bashrc;video_original="youtube-dl -o '/Downloads/%(title)s.%(ext)s' --merge-output-format mp4 --embed-subs --all-subs";video_original='"'$video_original'"';echo "alias video_o="$video_original >> /root/.bashrc 
VOLUME /Downloads
